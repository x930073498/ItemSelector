<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".base.ItemSelectorActivity">

    <data>

        <variable
            name="data"
            type="com.x930073498.item_selector_lib.base.bridge.ActivityViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_gray"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/color_background_blue"
            android:orientation="horizontal"
            app:titleTextColor="@color/text_color_white">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:clickable="true"
                android:paddingEnd="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:paddingStart="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fanhui" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:layout_marginStart="3dp"
                    android:background="@android:color/transparent"
                    android:text="返回"
                    android:textColor="@color/text_color_white"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="人员选择"
                android:textColor="@color/text_color_white"
                android:textSize="18sp" />
        </FrameLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/color_background_white"
            app:cardCornerRadius="0dp"
            app:cardElevation="1dp"
            app:contentPaddingBottom="4dp"
            app:contentPaddingTop="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/color_background_white"
                android:orientation="horizontal"
                android:showDividers="middle">

                <TextView
                    drawableHeight="@{@dimen/search_drop_down_height}"
                    drawableRight="@{@drawable/xiala}"
                    drawableWidth="@{@dimen/search_drop_down_width}"
                    drawablePadding="@{2}"
                    text="@{data.currentGroupName}"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@color/color_background_white"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="派出所"
                    android:textColor="@color/text_color_black"
                    android:textSize="14sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/color_background_gray" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/color_background_white"
                    android:paddingLeft="5dp"
                    android:paddingRight="3dp"
                    android:src="@drawable/xingm" />


                <EditText
                    android:id="@+id/searchView"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:hint="请输入人名进行检索..."
                    android:paddingLeft="5dp"
                    android:textSize="14sp"
                    app:theme="@style/MyEditText" />


                <TextView
                    drawableHeight="@{@dimen/dimen_button_search_icon_height}"
                    drawableLeft="@{@drawable/icon_search}"
                    drawableWidth="@{@dimen/dimen_button_search_icon_width}"
                    text="@{@string/search_text}"
                    drawablePadding="@{1}"
                    android:layout_width="80dp"
                    android:clickable="true"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/selector_button"
                    android:gravity="center"
                    android:textColor="@color/text_color_white" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/color_background_white"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:paddingRight="15dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="90dp"
                android:background="@drawable/selector_button"
                android:enabled="false"
                android:gravity="center"
                android:textColor="@color/text_color_white"
                android:layout_height="match_parent"
                android:text="提交"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</layout>